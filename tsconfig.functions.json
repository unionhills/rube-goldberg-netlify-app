{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "outDir": "./dist/functions",
    "types": []
  },
  "include": [
    "functions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "functions/test.ts",
    "functions/**/*.spec.ts"
  ]
}
